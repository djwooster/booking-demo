# ============================================
# APEX Studio - Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values
# The app runs in MOCK MODE if Supabase vars are not set

# ─── Supabase (Required for real auth & database) ───
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ─── Stripe (Mock mode by default) ───
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ─── Resend (Mock mode by default) ───
RESEND_API_KEY=re_your_api_key_here
RESEND_FROM_EMAIL=noreply@apexstudio.com

# ─── App Config ───
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_MOCK_MODE=true
